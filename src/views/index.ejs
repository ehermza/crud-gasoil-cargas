<%- include('partials/header'); -%>

    <div class="container p-4">
        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="input-group mb-3">
                                <select class="form-select" aria-label="Default select example" name="to">
                                    <option selected>Open this select menu</option>
                                    <option value="COSA">COMERCIAL OESTE SA</option>
                                    <option value="Cf">CONSUMIDOR FINAL</option>
                                    <option value="Otros">Otros</option>
                                  </select>
                            </div>
                            <div class="input-group mb-3"> 
                                <span class="input-group-text">Litros: </span>                                
                                <input type="text" class="form-control" placeholder="000.00" name="liters">
                            </div>
                            <div class="input-group mb-3"> 
                                <span class="input-group-text">Total $</span>                                
                                <input type="text" class="form-control" placeholder="Precio Final" name="price">
                            </div>
                            <button class="btn btn-sucess btn-outline-primary" type="submit"
                                id="button-addon2">ACEPTAR</button>

                        </form>
                    </div>
                </div>
            </div>
            <!-- DATABASE TABLE -->
            <div class="col-md-7">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('partials/footer'); -%>